{
  "name": "@amfa-team/room-service",
  "repository": "https://github.com/amfa-team/room-service.git",
  "version": "0.1.0",
  "description": "React component library",
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "core-js": "^3.6.5",
    "whatwg-fetch": "^3.4.1"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@sentry/react": "^5.24.2",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "concurrently": "^5.3.0",
    "cpx": "^1.5.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "recoil": "^0.0.13",
    "rollup": "^2.28.2",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^17.1.2",
    "semantic-release-slack-bot": "^1.6.2",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3",
    "typescript-plugin-css-modules": "^2.7.0"
  },
  "peerDependencies": {
    "@amfa-team/shared": "^0.1.0",
    "@sentry/react": "^5.24.2",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "recoil": "^0.0.13"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "browserslist": [
    "Chrome >= 55",
    "Edge >= 11",
    "Firefox >= 60",
    "Safari >= 11"
  ],
  "scripts": {
    "build": "yarn build:tsc && yarn build:css && yarn build:rollup",
    "build:tsc": "tsc -b",
    "build:rollup": "rollup -c rollup.config.js",
    "build:css": "cpx 'src/**/*.css' lib",
    "clean": "tsc -b --clean && rm -rf dist",
    "start": "yarn build:tsc && yarn build:css && concurrently \"yarn start:tsc\" \"yarn start:rollup\" \"yarn start:css\"",
    "start:rollup": "yarn build:rollup -w",
    "start:tsc": "yarn build:tsc -w",
    "start:css": "yarn build:css --watch",
    "deploy": "semantic-release"
  }
}
